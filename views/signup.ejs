<!doctype html>
<html>

<head>
    <title>half full</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="icon" href="img/halffull.png" type="image/png">
    <link rel="stylesheet" href="/signuplogin.css">
</head>

<body>


    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="water"></div>

            <h1>Signup</h1>

            <% if (message.length> 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>

                    <!-- LOGIN FORM -->
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <p>Please signup with a kit barcode:</p><br>
                            <label>SAECK Barcode</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>

                        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                    </form>

                    <hr>

                    <p>Need a barcode? Click <a href="/barcodes">here</a></p>
                    <p>Already have an account? <a href="/login">Login</a></p>
                    <p>Or go <a href="/">home</a>.</p>

        </div>
    </div>
    <script src="/main.js"></script>
</body>

</html>